<h1>Hi <%= @user.name() %>, welcome back to your account. </h1>
<h2>Here's your remaining budget</h2>
<p><%=(@user.budget()).check() %> $<%= (@user.budget()).remaining() %></p>
<p></p>
<p></p>

<form action="/moneycashboard/transaction-complete" method="POST">
    <div class="">
        <label for="user">Select user:</label>
        <select name="user_id" id="userSelect">
            <option value="<%=@user.id%>"><%= @user.name() %></option>
        </select>
        <br>

        <label for="category">Category:</label>
        <select name="category_id" id="categorySelect">
            <% @categories.each do |acategory| %>
            <option value="<%=acategory.id() %>"><%= acategory.name()%></option>
            <%end%>
        </select>
        <br>

        <label for="vendor">Vendor:</label>
        <select name="vendor_id" id="vendorSelect">
            <% @vendors.each do |avendor| %>
            <option value="<%=avendor.id() %>"><%= avendor.name()%></option>
            <%end%>
        </select>
        <br>



        <label for="dateInput">Date of purchase: (YYYY/MM/DD)</label>
        <input type="date" name="purchase_date" id="dateInput" />
        <br>

        <label for="spentInput">Amount spent:</label>
        <input type="float" name="amount_spent" id="spentInput" />
        <br>

        <input type="submit" value="Submit" />
    </div>
</form>

