<div class="page">
<h2>Here are a list of all your transactions</h2>

<% @transactions.each do |transaction| %>
<p>ID: <%=transaction.id%></p>
<p>Category: <%=(Category.find(transaction.category_id)).name()%></p>
<p>Vendor: <%=(Vendor.find(transaction.vendor_id)).name()%></p>
<p>Date: <%=transaction.purchase_date()%></p>
<p>Amount spent: $<%=transaction.amount_spent%></p>

<form action="/moneycashboard/transaction-deleted/<%=transaction.id%>" method="post">
    <input type="submit" value="Delete">
</form>

<hr>
<%end%>
</div>
